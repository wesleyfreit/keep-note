{
  "name": "keep-note",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build:api": "turbo build --filter=@seinfra/api",
    "build:web": "turbo build --filter=@seinfra/web",
    "dev:api": "turbo dev --filter=@seinfra/api",
    "dev:web": "turbo dev --filter=@seinfra/web",
    "start:api": "turbo start --filter=@seinfra/api",
    "start:web": "turbo start --filter=@seinfra/web",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:deploy": "turbo db:deploy",
    "db:seed": "turbo db:seed",
    "build": "turbo build",
    "start": "turbo start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "prettier-plugin-tailwindcss": "^0.6.9",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "3.2.5",
    "turbo": "^2.3.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx,d.ts}": "turbo lint --",
    "**/*.{json,css,config.*,md}": "prettier --write"
  }
}
