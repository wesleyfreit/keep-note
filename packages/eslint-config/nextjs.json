{
  "$schema": "http://json.schemastore.org/eslintrc",
  "env": {
    "browser": true
  },
  "extends": [
    "@repo/eslint-config/library.json",
    "plugin:tailwindcss/recommended",
    "plugin:react/recommended",
    "next"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "@next/next/no-html-link-for-pages": "off"
  }
}
